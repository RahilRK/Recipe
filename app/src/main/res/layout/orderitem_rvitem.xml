<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="@dimen/margin100"
            android:layout_height="@dimen/margin100"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_appicon"
            android:layout_margin="@dimen/margin10"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivRecipeImage"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_name"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="@dimen/textSize16"/>

                <TextView
                    android:id="@+id/recipePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hundredrupees"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin3"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize16"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin3"
                    android:textSize="@dimen/textSize16"
                    />

                <TextView
                    android:id="@+id/viewInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View recipe instruction"
                    android:textColor="@color/mblue"
                    android:layout_marginTop="@dimen/margin3"
                    android:textSize="@dimen/textSize16"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5"
        android:layout_marginStart="@dimen/margin5"
        android:layout_marginEnd="@dimen/margin5"
        android:background="@color/colorGrey"/>
</LinearLayout>